{
  "name": "depop",
  "description": "Hide stars, followers and watchers in GitHub",
  "version": "0.0.0.15",
  "manifest_version": 3,
  "homepage_url": "https://github.com/kachick/depop",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "run_at": "document_idle",
      "css": ["github-patcher-hide.css"],
      "js": ["github-patcher.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Toggle depop settings",
    "default_icon": {
      "128": "icon-sadness-star.png"
    }
  },
  "icons": {
    "128": "icon-sadness-star.png"
  },
  "content_security_policy": {
    "extension_pages": "default-src 'self'"
  }
}
